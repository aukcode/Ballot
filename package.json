{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap --concurrency=2 && lerna run build-css",
    "create-package": "lerna create",
    "test": "npm run bootstrap && npm run test:only",
    "test:ci": "npm run bootstrap && lerna run test:ci",
    "test:only": "lerna run test:only"
  },
  "devDependencies": {
    "@types/node": "12.6.2",
    "@types/react-router-dom": "^4.3.5",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.4",
    "lerna": "3.15.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "typescript": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "react-router-dom": "^5.0.1"
  }
}
